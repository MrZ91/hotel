<div class="col-md-6">
<%= simple_form_for [current_user, @hotel] do |f|%>
    <%=f.input :title %>
    <%=f.input :room_description %>
    <%=f.input :price_for_room %>
    <%= f.input :breakfast %>
<% #binding.pry %>
    <%=f.simple_fields_for :adress do |af| %>
        <%=af.input :country, :as => :string %>
        <%=af.input :state %>
        <%=af.input :city %>
        <%=af.input :street %>
    <% end %>
    <%= f.submit %>
<% end %>
</div>